<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- AutoSlideView -->
    <declare-styleable name="AutoSlideView">
        <!-- 是否开启自动滚动 -->
        <attr name="autoSlideEnabled" format="boolean"/>
        <!-- 滚动时间间隔 单位：s -->
        <attr name="timeInterval" format="integer"/>
    </declare-styleable>

    <!-- PageControlView -->
    <declare-styleable name="PageControlView">
        <!-- Indictor半径 -->
        <attr name="indictorRadius" format="float"/>
        <!-- Indictor颜色 -->
        <attr name="indictorColor" format="string"/>
        <!-- Indictor间隔 -->
        <attr name="indictorMargin" format="float"/>
        <!-- 当前Indictor颜色 -->
        <attr name="currIndictorColor" format="string"/>
        <!-- 总页数 -->
        <attr name="totalPage" format="float"/>
        <!-- 当前页 -->
        <attr name="currPage" format="float" />
    </declare-styleable>
</resources>